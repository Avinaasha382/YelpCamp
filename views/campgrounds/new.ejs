<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class = "text-center mb-5">Add a new Campground</h1>
    <div class = "col-6 offset-3" >
        <form action="/campgrounds" method = "post" novalidate class = "needs-validation">
            <div class = "mb-3">
                <label for="title" class = "form-label">Title</label>
                <input type="text" id = "title" name = "campground[title]" class = "form-control " required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a camp-title</div>
            </div>
            <div class = "mb-3">
                <label for="location" class = "form-label">Location</label>
                <input type="text" id = "location" name = "campground[location]" class = "form-control " required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a camp-location</div>
            </div>

            <div class = "mb-3">
                <label for="url" class = "form-label">Image Url</label>
                <input type="text" id = "url" name = "campground[image]" class = "form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a url for camp-image</div>
            </div>

            <div class = "mb-3">
                <label for="price" class = "form-label">Price</label>
                <span class="input-group-addon">$</span>
                <input type="text" id = "price" name = "campground[price]" class = "form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter campground price</div>
            </div>
            
            <div class = "mb-3">
                <label for="description" class = "form-label">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name = "campground[description]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a campground description</div>
            </div>
            
            <button class = "btn btn-success mb-3">Add Campground</button>
            <br>
            <a href="/campgrounds">All Campgrounds</a>
            
        </form>
    </div>
</div>

   
